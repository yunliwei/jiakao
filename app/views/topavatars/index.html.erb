

<% style_session('avatar') %>
<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>竖向广告</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">广告图</th>
          <th class="text-center">链接</th>
          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>
        <% @topavatars.each do |topavatar| %>
            <tr>
              <td><img src=<%= topavatar.topavatar.url %> width=200></td>
              <td><%= topavatar.link %></td>
              <td><%= link_to '编辑', edit_topavatar_path(topavatar) %>
                <%= link_to '删除', topavatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <%= link_to "新增", new_topavatar_path,class: "btn btn-w-m btn-success mylink pull-right" %>
      <br>
    </div>
  </div>
</div>
<%= render 'layerend' %>