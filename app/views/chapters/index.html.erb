<%= render 'layerbegin' %>
<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>章节</h3>

    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">章节名称</th>

          <th class="text-center">操作</th>
        </tr>
        </thead>
        <tbody>


        <% @chapters.each do |chapter| %>
            <tr>
              <td>(<%= chapter.flag %>)<%= chapter.chapter %></td>
<td>
                <%= link_to '', edit_chapter_path(chapter),class:'fa fa-edit' %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <%= link_to '', chapter,class:'fa fa-trash', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
      <div class="text-center" >

        <%= will_paginate @chapters, previous_label:'上一页', next_label: '下一页' %>
      </div>


      <%= link_to "新增", new_chapter_path,class: "btn btn-w-m btn-success mylink pull-right" %>
      <br>
    </div>

  </div>
</div>
<%= render 'layerend' %>