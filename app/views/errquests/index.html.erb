<% style_session('err') %>
<%= render 'layerbegin' %>



<div class="col-lg-12">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h3>错题统计</h3>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-bordered text-center">
        <thead>
        <tr>
          <th class="text-center">用户</th>
          <th class="text-center">题目</th>
          <th class="text-center">次数</th>
          <th class="text-center">操作</th>

        </tr>
        </thead>
          <tbody>
          <% @errquests.each do |errquest| %>
              <tr>
                <td>
                  <% @users.each do |user| %>
                      <% if user.id == errquest.user_id %>
                  <%= user.login %>
                          <% break %>
                          <% end %>
                  <% end %>
                </td>
                <td>
                  <% @questions.each do |question| %>
                      <% if question.id == errquest.question_id %>
                          <%= question.questionname.html_safe %>
                          <% break %>
                      <% end %>
                  <% end %>
                </td>
                <td><%= errquest.amount %></td>
                <td>

                    <%= link_to '', errquest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>

    </div>
  </div>
</div>


<tbody>



</tbody>
</table>
<br>
<div class="text-center">

  <%= will_paginate @errquests, previous_label:'上一页', next_label: '下一页' %>

</div>






